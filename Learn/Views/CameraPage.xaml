<Page
    x:Class="Learn.Views.CameraPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Learn.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:behaviors="using:Learn.Behaviors"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Minimal"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
          <controls:CameraControl
              x:Name="cameraControl"
              x:Uid="CameraPage_CameraControl"
              PhotoTaken="CameraControl_PhotoTaken" />
          <Image
              x:Name="Photo"
              Width="70"
              Height="70"
              Margin="{StaticResource MediumLeftTopRightBottomMargin}"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom" 
              Stretch="UniformToFill" />
        </Grid>
    </Grid>
</Page>
